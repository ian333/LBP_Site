---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';

export function getStaticPaths() {
  return [
    { params: { username: 'ianvaz18' } },
    { params: { username: 'ricargorres' } },
    { params: { username: 'angelupv' } },
    { params: { username: 'kikejd' } },
  ];
}

const { username } = Astro.params;

const teamData = {
  ianvaz18: {
    name: 'Ian Vaz',
    role: 'Director & Founder',
    bio: 'Director creativo y fundador de Loyal Bliss Productions. Con más de 8 años de experiencia dirigiendo comerciales para marcas como Nike, Corona y Mercedes-Benz. Especializado en narrativa cinematográfica y dirección de actores.',
    instagram: 'https://instagram.com/ianvaz18',
    whatsapp: '5573633622',
    skills: ['Dirección', 'Narrativa', 'Comerciales', 'Music Videos'],
    stats: { projects: 45, awards: 12, years: 8 }
  },
  ricargorres: {
    name: 'Ricardo Gorres',
    role: 'Director de Fotografía',
    bio: 'DP con visión única y 10 años de experiencia. Experto en iluminación cinematográfica usando Aputure, ARRI y Kino Flo. Ha trabajado con RED, ARRI Alexa y BlackMagic. Especializado en look anamórfico y color science.',
    instagram: 'https://instagram.com/ricargorres',
    whatsapp: '5545850911',
    skills: ['Cinematografía', 'Iluminación', 'Color Science', 'Camera Operating'],
    stats: { projects: 67, awards: 8, years: 10 }
  },
  angelupv: {
    name: 'Angel UPV',
    role: 'Producer & Creative Director',
    bio: 'Productor ejecutivo con experiencia en proyectos internacionales. Especializado en coordinación de equipos grandes, location scouting y desarrollo creativo. Ha producido para Netflix, HBO y Amazon Prime.',
    instagram: 'https://instagram.com/angelupv',
    skills: ['Producción', 'Coordinación', 'Budgeting', 'Location Scouting'],
    stats: { projects: 89, awards: 15, years: 12 }
  },
  kikejd: {
    name: 'Kike JD',
    role: 'Editor & Colorist',
    bio: 'Editor senior y colorista certificado en DaVinci Resolve. Especializado en workflows ACES, HDR y narrativa no lineal. Ha trabajado en proyectos para Spotify, Apple Music y Universal.',
    instagram: 'https://instagram.com/kikejd',
    skills: ['Edición', 'Color Grading', 'DaVinci Resolve', 'After Effects'],
    stats: { projects: 120, awards: 6, years: 7 }
  }
};

const member = teamData[username];

// Generar array de imágenes del portfolio
const portfolioImages = Array.from({ length: 12 }, (_, i) => ({
  src: `/team/${username}/photos/post_${i + 1}.jpg`,
  alt: `Proyecto ${i + 1}`
}));
---

<BaseLayout title={`${member.name} — Loyal Bliss Productions`}>
  <Navigation />
  
  <main class="pt-20 min-h-screen">
    {/* Hero Section */}
    <section class="py-16 px-6 bg-gradient-to-b from-coal to-black">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <img 
              src={`/team/${username}/photos/profile.jpg`}
              alt={member.name}
              class="w-full max-w-md mx-auto rounded-2xl shadow-2xl"
            />
          </div>
          
          <div>
            <h1 class="font-display text-4xl md:text-5xl font-bold mb-2">{member.name}</h1>
            <p class="text-2xl text-gold mb-6">{member.role}</p>
            
            <p class="text-bone/80 mb-8 leading-relaxed text-lg">
              {member.bio}
            </p>
            
            {/* Skills */}
            <div class="mb-8">
              <h3 class="font-semibold mb-3">Especialidades</h3>
              <div class="flex flex-wrap gap-2">
                {member.skills.map(skill => (
                  <span class="px-4 py-2 bg-white/10 rounded-full text-sm">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
            
            {/* Stats */}
            <div class="grid grid-cols-3 gap-6 mb-8">
              <div>
                <p class="text-3xl font-bold text-gold">{member.stats.projects}</p>
                <p class="text-sm text-bone/60">Proyectos</p>
              </div>
              <div>
                <p class="text-3xl font-bold text-gold">{member.stats.awards}</p>
                <p class="text-sm text-bone/60">Premios</p>
              </div>
              <div>
                <p class="text-3xl font-bold text-gold">{member.stats.years}</p>
                <p class="text-sm text-bone/60">Años exp.</p>
              </div>
            </div>
            
            {/* Contact */}
            <div class="flex gap-4">
              <a 
                href={member.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full hover:from-purple-700 hover:to-pink-700 transition-all"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                </svg>
                Instagram
              </a>
              
              {member.whatsapp && (
                <a 
                  href={`https://wa.me/521${member.whatsapp}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-6 py-3 bg-green-600 rounded-full hover:bg-green-700 transition-all"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.149-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414-.074-.123-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                  </svg>
                  WhatsApp
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
    
    {/* Portfolio Grid */}
    <section class="py-16 px-6">
      <div class="max-w-7xl mx-auto">
        <h2 class="font-display text-3xl font-bold mb-8">Portfolio</h2>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {portfolioImages.map((img, index) => (
            <div class="group relative aspect-square overflow-hidden rounded-lg bg-white/5">
              <img 
                src={img.src}
                alt={img.alt}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>