---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import DarkHero from '../components/DarkHero.jsx';
import CinematicGallery from '../components/CinematicGallery.jsx';
---

<BaseLayout>
  <Navigation />
  
  <!-- Hero Section con DarkHero Component -->
  <DarkHero client:load />
  
  <!-- Portfolio Gallery con CinematicGallery Component -->
  <CinematicGallery client:load />
  
  <!-- Behind The Scenes Collage - Enhanced -->
  <section class="relative bg-black py-24 overflow-hidden">
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('/dark/grain-dark-1.jpg'); background-size: 200px;"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-6 relative">
      <!-- Header with glitch effect -->
      <div class="mb-20 text-center relative">
        <h2 class="font-display text-5xl md:text-7xl font-black text-white tracking-tight relative">
          <span class="relative z-10">BEHIND THE</span>
          <span class="block text-gold relative z-10 mt-2">SCENES</span>
          
          <!-- Glitch overlay -->
          <span class="absolute inset-0 font-display text-5xl md:text-7xl font-black tracking-tight text-red-500/20 animate-pulse">
            BEHIND THE<br/>SCENES
          </span>
        </h2>
        
        <!-- Decorative lines -->
        <div class="flex items-center justify-center mt-8 gap-4">
          <div class="h-px w-24 bg-gradient-to-r from-transparent to-gold"></div>
          <div class="w-2 h-2 bg-gold rotate-45"></div>
          <div class="h-px w-24 bg-gradient-to-l from-transparent to-gold"></div>
        </div>
      </div>
      
      <!-- Enhanced Masonry Grid with hover effects -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="space-y-6">
          <div class="group relative overflow-hidden">
            <img src="/dark/bts-dark-1.jpg" alt="Behind the scenes" class="w-full h-48 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              SETUP
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/camera-dark-1.jpg" alt="Professional camera" class="w-full h-64 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              RED DRAGON
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/portrait-dark-3.jpg" alt="Portrait session" class="w-full h-56 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              PORTRAIT
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="group relative overflow-hidden">
            <img src="/dark/lens-dark-1.jpg" alt="Camera lens" class="w-full h-56 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              ZEISS LENS
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/atmosphere-dark-1.jpg" alt="Atmospheric lighting" class="w-full h-48 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              ATMOSPHERE
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/abstract-dark-1.jpg" alt="Abstract composition" class="w-full h-60 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              ABSTRACT
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="group relative overflow-hidden">
            <img src="/dark/red-camera-dark.jpg" alt="RED camera setup" class="w-full h-64 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              RED SETUP
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/smoke-dark-1.jpg" alt="Smoke effects" class="w-full h-44 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              FX SMOKE
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/portrait-dark-4.jpg" alt="Dark portrait" class="w-full h-52 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              DARK MOOD
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="group relative overflow-hidden">
            <img src="/dark/gimbal-dark-1.jpg" alt="Gimbal stabilizer" class="w-full h-52 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              GIMBAL
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/color-dark-1.jpg" alt="Color grading" class="w-full h-60 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              COLOR
            </div>
          </div>
          
          <div class="group relative overflow-hidden">
            <img src="/dark/fog-dark-1.jpg" alt="Fog machine effects" class="w-full h-48 object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-4 left-4 text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              FOG FX
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Team Dark Section -->
  <section class="bg-black py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="font-display text-4xl md:text-5xl font-black text-white mb-6 tracking-tight">
            EL EQUIPO
          </h2>
          <p class="text-gray-300 text-xl leading-relaxed mb-8">
            Directores, DPs, productores y editores unidos por la pasión de crear imágenes que no se olvidan.
          </p>
          <div class="grid grid-cols-2 gap-8">
            <div>
              <h3 class="text-gold font-bold text-sm tracking-widest mb-2">DIRECTOR</h3>
              <p class="text-white font-semibold">Ian Vaz</p>
            </div>
            <div>
              <h3 class="text-gold font-bold text-sm tracking-widest mb-2">DP</h3>
              <p class="text-white font-semibold">Ricardo Gorres</p>
            </div>
            <div>
              <h3 class="text-gold font-bold text-sm tracking-widest mb-2">PRODUCER</h3>
              <p class="text-white font-semibold">Angel UPV</p>
            </div>
            <div>
              <h3 class="text-gold font-bold text-sm tracking-widest mb-2">EDITOR</h3>
              <p class="text-white font-semibold">Kike JD</p>
            </div>
          </div>
          <a 
            href="/team"
            class="inline-flex items-center text-white font-bold mt-8 hover:text-gold transition-colors"
          >
            CONOCER AL EQUIPO
            <span class="ml-2">→</span>
          </a>
        </div>
        
        <div class="relative">
          <img 
            src="/dark/portrait-dark-1.jpg" 
            alt="Team"
            class="w-full aspect-[4/5] object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Contact CTA Dark -->
  <section class="bg-black py-32 relative">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('/dark/texture-dark-1.jpg'); background-size: 400px;"></div>
    </div>
    
    <div class="max-w-4xl mx-auto text-center px-6 relative">
      <h2 class="font-display text-5xl md:text-7xl font-black text-white mb-8 tracking-tight">
        CRÉATE ALGO
        <span class="text-gold block">EXTRAORDINARIO</span>
      </h2>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center mt-12">
        <a
          href="https://wa.me/5215573633622"
          target="_blank"
          class="px-10 py-5 bg-gold text-black font-black text-lg rounded-none hover:bg-white transition-all hover:scale-105"
        >
          WHATSAPP AHORA
        </a>
        <a
          href="/contact"
          class="px-10 py-5 border-2 border-white text-white font-black text-lg rounded-none hover:bg-white hover:text-black transition-all"
        >
          MÁS INFORMACIÓN
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Film grain animation */
  @keyframes grain {
    0%, 100% { transform: translate(0, 0) }
    10% { transform: translate(-5%, -10%) }
    20% { transform: translate(-10%, 5%) }
    30% { transform: translate(5%, -25%) }
    40% { transform: translate(-5%, 25%) }
    50% { transform: translate(-10%, 10%) }
    60% { transform: translate(15%, 0%) }
    70% { transform: translate(0%, 15%) }
    80% { transform: translate(3%, 35%) }
    90% { transform: translate(-10%, 10%) }
  }
  
  .grain-animation {
    animation: grain 8s steps(10) infinite;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #000;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #d4af37;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #f4d03f;
  }
</style>