---
const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/work', label: 'Work' },
  { href: '/blog', label: 'Blog' },
  { href: '/team', label: 'Equipo' },
  { href: '/contact', label: 'Contacto' }
];

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-coal/80 backdrop-blur-lg border-b border-white/5">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="font-display text-2xl font-bold tracking-wider hover:text-gold transition-colors">
      LOYAL BLISS
    </a>
    
    <ul class="hidden md:flex items-center gap-8">
      {navItems.map((item) => (
        <li>
          <a 
            href={item.href}
            class={`text-sm font-medium tracking-wide transition-colors hover:text-gold ${
              currentPath === item.href ? 'text-gold' : 'text-bone/80'
            }`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
    
    <!-- Mobile menu button -->
    <button 
      id="mobile-menu-btn"
      class="md:hidden p-2"
      aria-label="Menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-coal/95 backdrop-blur-lg border-t border-white/5">
    <ul class="px-6 py-4 space-y-3">
      {navItems.map((item) => (
        <li>
          <a 
            href={item.href}
            class={`block py-2 text-sm font-medium tracking-wide transition-colors hover:text-gold ${
              currentPath === item.href ? 'text-gold' : 'text-bone/80'
            }`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>